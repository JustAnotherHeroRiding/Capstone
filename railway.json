{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "args": {
        "buildCommand": "pip install -r requirements.txt",
        "runCommand": "python manage.py migrate && python manage.py collectstatic --noinput && gunicorn Capstone.wsgi"
      }
    },
    "deploy": {
      "startCommand": "nix-build && ./result/bin/start",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }
  